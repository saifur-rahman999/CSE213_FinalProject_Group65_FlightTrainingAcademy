<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cse213_finalproject_group65_flighttrainingacademy.FinanceAndEnrollmentOfficer.FEODashboardController"
            prefWidth="720" prefHeight="420">

    <children>
        <VBox spacing="14" AnchorPane.topAnchor="16" AnchorPane.leftAnchor="16"
              AnchorPane.rightAnchor="16" AnchorPane.bottomAnchor="16">
            <children>
                <Label text="Finance & Enrollment Officer â€” Dashboard"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>

                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="34"/>
                    </columnConstraints>

                    <!-- Row 1 -->
                    <Button text="New Application" GridPane.rowIndex="0" GridPane.columnIndex="0"
                            onAction="#openNewApplication"/>
                    <Button text="Generate Invoice" GridPane.rowIndex="0" GridPane.columnIndex="1"
                            onAction="#openGenerateInvoice"/>
                    <Button text="Record Payment" GridPane.rowIndex="0" GridPane.columnIndex="2"
                            onAction="#openRecordPayment"/>

                    <!-- Row 2 -->
                    <Button text="Track Outstanding" GridPane.rowIndex="1" GridPane.columnIndex="0"
                            onAction="#openTrackOutstanding"/>
                    <Button text="Enrollment Actions (Withdraw/Defer)" GridPane.rowIndex="1" GridPane.columnIndex="1"
                            onAction="#openEnrollmentActions"/>
                    <Button text="Reminder Preview" GridPane.rowIndex="1" GridPane.columnIndex="2"
                            onAction="#openReminderPreview"/>
                </GridPane>

                <Label text="Tip: buttons replace the current Scene root with the selected view."
                       style="-fx-text-fill: #666; -fx-font-size:11;"/>
            </children>
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </VBox>
    </children>
</AnchorPane>
