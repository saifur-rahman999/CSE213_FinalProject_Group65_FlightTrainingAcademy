<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cse213_finalproject_group65_flighttrainingacademy.FinanceAndEnrollmentOfficer.IssueRefund"
            prefWidth="720.0" prefHeight="420.0">

    <children>
        <VBox spacing="12" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>
                <Label text="Refund / Dispute Resolution" style="-fx-font-size:18; -fx-font-weight:bold;"/>

                <GridPane hgap="12" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="16"/>
                        <RowConstraints percentHeight="28"/>
                        <RowConstraints percentHeight="16"/>
                        <RowConstraints percentHeight="16"/>
                        <RowConstraints percentHeight="24"/>
                    </rowConstraints>

                    <children>
                        <Label text="Invoice ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="invoiceIdField" promptText="e.g., INV-001"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ChoiceBox fx:id="typeChoice" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Refund"/>
                                    <String fx:value="Dispute"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                        <Label text="Reason:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextArea fx:id="reasonArea" promptText="Why is this refund/dispute raised?"
                                  prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="amountField" promptText="e.g., 5000.00"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Approver ID:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="approverIdField" promptText="e.g., FEO-APPR-01"
                                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10">
                    <children>
                        <Button text="Verify Approval" onAction="#onVerifyApproval"/>
                        <Button text="Post Resolution" onAction="#onPostResolution"/>
                    </children>
                </HBox>

                <Label fx:id="statusLabel" text="" style="-fx-text-fill:#444;"/>
            </children>
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </VBox>
    </children>
</AnchorPane>
