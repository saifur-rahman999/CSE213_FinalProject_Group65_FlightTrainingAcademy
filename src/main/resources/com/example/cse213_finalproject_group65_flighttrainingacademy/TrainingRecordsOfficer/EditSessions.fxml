<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cse213_finalproject_group65_flighttrainingacademy.TrainingRecordsOfficer.EditSessions"
            prefWidth="520" prefHeight="320">

    <center>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

            <!-- Non-editables -->
            <Label text="Session ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Date" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" editable="false" disable="true"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Trainee" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="traineeField" editable="false"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Editable -->
            <Label text="Aircraft/Device" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="aircraftCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Duration (hrs)" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="durationField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Remarks" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="remarksArea" prefRowCount="3" wrapText="true"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <Button text="Save" onAction="#onSave"/>
                <Button text="Cancel" onAction="#onCancel"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
