<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cse213_finalproject_group65_flighttrainingacademy.TrainingRecordsOfficer.InstructorRatingsController"
            prefWidth="880" prefHeight="520">

    <!-- Header -->
    <Label text="Instructors" layoutX="20" layoutY="20"/>
    <Label text="Ratings for Selected Instructor" layoutX="360" layoutY="20"/>

    <!-- BACK BUTTON (top-right) -->
    <Button text="Back" fx:id="btnBack" onAction="#onBack"
            layoutX="810" layoutY="16" prefWidth="50"/>

    <!-- LEFT: Instructors table -->
    <TableView fx:id="instructorTable"
               layoutX="20" layoutY="50"
               prefWidth="320" prefHeight="450">
        <columns>
            <TableColumn fx:id="colInstrId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colInstrName" text="Name" prefWidth="220"/>
        </columns>
    </TableView>

    <!-- RIGHT: Ratings table -->
    <TableView fx:id="ratingTable"
               layoutX="360" layoutY="50"
               prefWidth="500" prefHeight="320">
        <columns>
            <TableColumn fx:id="colRatingLabel" text="Rating" prefWidth="280"/>
            <TableColumn fx:id="colExpiry" text="Expiry" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Inputs (no action buttons) -->
    <Label text="Rating" layoutX="360" layoutY="385"/>
    <TextField fx:id="ratingField" promptText="e.g. CPL, IR, ME"
               layoutX="410" layoutY="380" prefWidth="180"/>

    <Label text="Expiry" layoutX="610" layoutY="385"/>
    <DatePicker fx:id="expiryPicker"
                layoutX="660" layoutY="380" prefWidth="200"/>

    <!-- Status label -->
    <Label fx:id="statusLabel"
           layoutX="360" layoutY="430" prefWidth="500"/>
</AnchorPane>
